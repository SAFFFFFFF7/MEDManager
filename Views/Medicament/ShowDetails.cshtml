@model Medicament

<div class="container py-5">
    <div class="d-flex justify-content-center">
        <div class="card shadow rounded" style="width: 100%; max-width: 15000px;">
            <div class="card-header text-center" style="width: 100%;">
                <h1 class="mb-0">Détails</h1>
            </div>
            <div class="card-body">
                <div class="container text-center">
                    <div class="row align-items-start">
                        <div class="col">
                        </div>
                        <div class="col">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Quantité</th>
                                        <th scope="col">Ingrédients</th>
                                        <th scope="col">Allergies</th>
                                        <th scope="col">Antécédents</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.Name</td>
                                        <td>@Model.Quantity</td>
                                        <td>@Model.Ingredients</td>
                                        <td>
                                            <ul>
                                                @foreach (var allergy in Model.Allergies)
                                                {
                                                    <li>@allergy.Name</li>
                                                }
                                            </ul>
                                        </td>
                                        <td>
                                            <ul>
                                                @foreach (var medicalHistory in Model.MedicalHistories)
                                                {
                                                    <li>@medicalHistory.Name</li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <a asp-action="Index" asp-route-id="" type="button" class="btn btn-primary"
                                style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">
                                Retour
                            </a>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>