@model Medicament


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supprimer un médicament :</title>
</head>

<h1>Êtes-vous sûr de vouloir supprimer ce médicament ?</ h1>
<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label> <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label> <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ingredients"></label> <input asp-for="Ingredients" class="form-control" />
    </div>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    <input type="button" onclick="history.back()" value="Retour" class="btn btn-secondary" />
</form>
