@model Patient
@{
    <div class="container text-center">
        <div class="row">
            <div class="col">
            </div>
            <div class="col-8">
            </div>
            <input asp-for="@Model.DoctorId" type="hidden" class="form-control" />
            <div>
                <h1>Détails</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Âge</th>
                            <th scope="col">Genre</th>
                            <th scope="col">Taille</th>
                            <th scope="col">Poids</th>
                            <th scope="col">Numéro de sécurité social</th>
                            <th scope="col">Allergies</th>
                            <th scope="col">Antécédents</th>
                            <th scope="col">Ordonnances</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.FirstName</td>
                            <td>@Model.LastName</td>
                            <td>@Model.Age</td>
                            <td>@Model.Gender</td>
                            <td>@Model.Height</td>
                            <td>@Model.Weight</td>
                            <td>@Model.SecurityCardNumber</td>
                            <td>
                                <ul>
                                    @foreach (var allergy in Model.Allergies)
                                    {
                                        <li>@allergy.Name</li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    @foreach (var medicalHistory in Model.MedicalHistories)
                                    {
                                        <li>@medicalHistory.Name</li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    @foreach (var prescription in Model.Prescriptions)
                                    {
                                        <li>@prescription.StartDate</li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col">
            </div>
        </div>
        <div class="row">
            <div class="col">
            </div>
            <div class="col-5">
                <a asp-action="Index" asp-route-id="" type="button" class="btn btn-primary"
                    style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">
                    Retour
                </a>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
}
