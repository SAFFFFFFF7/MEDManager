@model Patient
@{
    <html>

    <head>
        <title>Patient</title>
    </head>

    <body>
        <div class="container text-center">
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8">
                    </div>
                        <input asp-for="@Model.DoctorId" type="hidden" class="form-control" />
                    <div>
                    <h1>details</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Âge</th>
                                <th scope="col">Genre</th>
                                <th scope="col">Taille</th>
                                <th scope="col">Poids</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.FirstName</td>
                                <td>@Model.LastName</td>
                                <td>@Model.Age</td>
                                <td>@Model.Gender</td>
                                <td>@Model.Height</td>
                                <td>@Model.Weight</td>
                                @foreach (var allergy in Model.Allergies)
                                {
                                    <td>@allergy.Name</td>
                                }
                                @foreach (var medicalHistory in Model.MedicalHistories)
                                {
                                    <td>@medicalHistory.Name</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col">
                </div>
            </div>
            <div class="row">
                <div class="col">
                </div>
                <div class="col-5">
                    <a asp-action="Add" asp-route-id="" type="button" class="btn btn-primary"
                        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">
                        Ajouter un patient
                    </a>
                </div>
                <div class="col">
                </div>
            </div>
        </div>
    </body>

    </html>
}
