<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css"
        rel="stylesheet">
    <link href="~/css/bootstrap-multiselect.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="https://davidstutz.github.io/bootstrap-multiselect/docs/js/jquery-2.2.4.min.js"></script>
    <script src="https://davidstutz.github.io/bootstrap-multiselect/docs/js/bootstrap.bundle-4.5.2.min.js"></script>
    <script src="https://davidstutz.github.io/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>

    @RenderSection("Scripts", required: false)

    <style>
        body {
            display: flex;
            min-height: 100vh;
        }

        /* Style pour la sidebar */
        .sidebar {
            height: 100vh;
            background-color: #343a40;
            /* Couleur de fond de la sidebar */
            color: white;
            min-width: 250px;
        }

        .sidebar .nav-link {
            color: white;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
        }

        /* Style pour le contenu principal */
        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="sidebar d-flex flex-column p-3 sticky-top">
        <h2 class="text-center">Med Manager</h2>
        <hr />
        <ul class="nav nav-pills flex-column">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Medicament" asp-route-id="" class="nav-link"
                        aria-current="page">Voir les médicaments</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Patient" asp-route-id="" class="nav-link" aria-current="page">Voir
                        les patients</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Allergy" asp-route-id="" class="nav-link" aria-current="page">Voir
                        les allergies</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="MedicalHistory" asp-route-id="" class="nav-link"
                        aria-current="page">Voir les antécedents</a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Prescription" asp-route-id="" class="nav-link"
                        aria-current="page">Voir les ordonnances</a>
                </li>
            }
            else
            {

            }
        </ul>
    </div>

    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item" class="navbar-text">
                            <a class="nav-link active">Hello, @User.Identity.Name!</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Logout" asp-controller="Account" asp-route-id="" class="nav-link"
                                aria-current="page">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">S'inscrire</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <!-- Contenu principal de la page -->
        <div class="container mt-4">
            @RenderBody()
        </div>
    </div>

    <!-- Liens vers les scripts JavaScript de Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
