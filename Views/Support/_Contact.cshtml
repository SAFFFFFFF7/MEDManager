<div class="container py-5">
    <div class="d-flex justify-content-center">
        <div class="card shadow rounded" style="width: 100%; max-width: 15000px;">
            <div class="card-header text-center" style="width: 100%;">
                <h1 class="mb-0">Contact</h1>
            </div>
            <div class="card-body">
                <div>
                    <form action="https://api.web3forms.com/submit" method="POST">
                        <input type="hidden" name="access_key" value="c80b64ed-414a-44e3-904b-1b332a7a9f9b">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">E-mail</label>
                                <input type="email" class="form-control" name="email"
                                    placeholder="christophedupont@exemple.com">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputName4">Nom</label>
